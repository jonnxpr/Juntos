<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_item_col"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorPrimaryDark"
        app:srcCompat="@drawable/googleg_standard_color_18" />

    <TextView
        android:id="@+id/textView_item_col_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView_item_col"
        app:layout_constraintTop_toTopOf="@+id/imageView_item_col" />

    <TextView
        android:id="@+id/textView_item_col_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/textView_item_col_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_item_col_name" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_medal1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_item_col_part"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_item_col_name"
        app:srcCompat="@drawable/crown" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_medal2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_item_col_part"
        app:layout_constraintEnd_toStartOf="@+id/imageView_medal1"
        app:layout_constraintTop_toTopOf="@+id/textView_item_col_name"
        app:layout_constraintVertical_bias="0.473"
        app:srcCompat="@drawable/crown" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_medal3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_item_col_part"
        app:layout_constraintEnd_toStartOf="@+id/imageView_medal2"
        app:layout_constraintTop_toTopOf="@+id/textView_item_col_name"
        app:layout_constraintVertical_bias="0.526"
        app:srcCompat="@drawable/crown" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_medal4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_item_col_part"
        app:layout_constraintEnd_toStartOf="@+id/imageView_medal3"
        app:layout_constraintTop_toTopOf="@+id/textView_item_col_name"
        app:layout_constraintVertical_bias="0.473"
        app:srcCompat="@drawable/crown" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_medal5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_item_col_part"
        app:layout_constraintEnd_toStartOf="@+id/imageView_medal4"
        app:layout_constraintTop_toTopOf="@+id/textView_item_col_name"
        app:layout_constraintVertical_bias="0.526"
        app:srcCompat="@drawable/crown" />


</androidx.constraintlayout.widget.ConstraintLayout>